

<MudGrid class="cash-in-wrap">

    <div class="cash-ui">
        <h6>
            @CashInOutUIDefeinition.ElementCaption @if (cashtransaction.TransactionNumber.Length > 0)
            {
                <span> - <span class="success-text">@cashtransaction.TransactionNumber</span></span>
            }

        </h6>

        <div class=" @(!messages.IsValidForm()?"bl-expansion-panel":"d-none")">
            <MudExpansionPanels>
                <MudExpansionPanel Text="@($"Cannot Process,Please Correct Errors")">
                    @foreach (var error in messages.UserMessages)
                    {
                        <MudText Color="@Color.Error">@error.Message</MudText>
                    }
                </MudExpansionPanel>
            </MudExpansionPanels>

        </div>
        <hr />
        <CashDenominator  @ref="_refDenominator" />
        <MudGrid>
            <MudItem xs=12>
                <hr />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.h6"></MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Align="Align.Right">
                    <MudButton Variant="Variant.Filled" OnClick="CloseWindow" Color="Color.Default">Cancel</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveDenominations">Save</MudButton>
                </MudText>

            </MudItem>

        </MudGrid>


    </div>

</MudGrid>



