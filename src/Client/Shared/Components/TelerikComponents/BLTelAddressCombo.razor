@using BlueLotus360.CleanArchitecture.Domain.DTO.Object;
@using BlueLotus360.CleanArchitecture.Domain.Entities;
<MudItem xs="12" class=@css_class md="@UIElement.Width">
    @if (AddressResponse == null)
    {
        <MudSkeleton Animation="Animation.Wave" Width="100%" />
    }
    else
    {
        <div class="w-100">
            <div class="col-12">
                <div class="bk-k-lable">@UIElement.ElementCaption</div>
            </div>
            <div class="col-12">
                <TelerikComboBox Data="@AddressResponse" TextField="AddressName" ValueField="AddressKey"
                             Placeholder="Select an item..." ClearButton="true" Filterable="true"
                             Value="@selectedAddress.AddressKey"
                             TValue="long" TItem="AddressResponse"
                             ValueChanged="(long AddressKey)=>OnComboValueChangedTel(AddressKey)"
                             FilterOperator="Telerik.Blazor.StringFilterOperator.Contains">
                </TelerikComboBox>
            </div>
        </div>



    }
</MudItem>