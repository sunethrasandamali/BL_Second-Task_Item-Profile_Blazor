
<MudItem xs="width" class=@css_class md="@UIElement.Width">

    <div class="w-100">
        <div class="col-12">
            <div class="bk-k-lable">@UIElement.ElementCaption</div>
        </div>
        <div class="col-12">
            <TelerikTextBox
                Value=@TextValue
                ValueChanged="OnBlTelTextChanged"
                PlaceHolder="@UIElement.DefaultValue"
             
                Enabled=@IsEnabled>
            </TelerikTextBox>
        </div>
    </div>
</MudItem>