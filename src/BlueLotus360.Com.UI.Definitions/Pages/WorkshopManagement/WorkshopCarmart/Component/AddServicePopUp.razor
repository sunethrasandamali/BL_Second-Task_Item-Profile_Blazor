@using Telerik.Blazor

<TelerikWindow Modal="true" @bind-Visible="@WindowIsVisible"
               Centered="true"
               Draggable=false
               CloseOnOverlayClick="false" Class="pop-up-z-index" Height="500px" Width="1000px" Resizable=false>

    <WindowActions>
       
        <WindowAction Name="Close" Hidden="false" OnClick="OnCloseClick" />
    </WindowActions>
    <WindowTitle>
        Add Services
    </WindowTitle>
    <WindowContent>
        <UIRenderere FromSection="@PopUI"
                     DataObject="DataObject"
                     InteractionLogics="InteractionLogic"
                     ObjectHelpers="ObjectHelpers" />
        <hr />

        <div class="mt-3">
            @if (Services != null)
            {
                <TelerikGrid Data=@Services.Where(x=>x.IsActive==1).ToList() Pageable="true" PageSize="5" OnDelete="@DeleteHandler" Sortable=true FilterMode="GridFilterMode.FilterMenu">
                    <GridColumns>
                        <GridColumn Field="TransactionItem.ItemName" Title="Service" />
                        <GridColumn Field="Address2" Title="Technician" />
                        <GridColumn Field="TransactionUnit.UnitName" Title="Unit" />
                        <GridColumn Field="Time" Title="Hours" TextAlign="ColumnTextAlign.Right" />
                        <GridColumn Field="Rate" Title="Rate" TextAlign="ColumnTextAlign.Right" />
                        <GridCommandColumn>
                            <GridCommandButton Command="Delete" Icon="delete">Delete</GridCommandButton>
                        </GridCommandColumn>
                    </GridColumns>
                </TelerikGrid>
            }

        </div>
        <div class="d-flex justify-content-center popup-footer-carmart">
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="OnAddClick">Done</MudButton>
        </div>
    </WindowContent>
</TelerikWindow>

