
<MudItem xs="12" class=@css_class md="@UIElement.Width">

    @if (Units == null)
    {
        <MudSkeleton Animation="Animation.Pulse" Width="100%" />
    }
    else
    {
        @if (selectedUnit!=null && UIElement!=null)
        {
            <MudAutocomplete T="UnitResponse"
                     Text="@selectedUnit.UnitName"
                     Label="@UIElement.ElementCaption"
                     SearchFunc="@OnComboSearch"
                     ValueChanged="OnComboValueChanged"
                     Value="selectedUnit"
                     Variant="UIDefaults.DefaultControlVariants" />
        }
        
    }

</MudItem>