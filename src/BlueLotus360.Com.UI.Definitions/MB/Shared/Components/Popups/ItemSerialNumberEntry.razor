@using System.ComponentModel.DataAnnotations
@if (LineItem != null)
{
    int index = 1;
    <MudGrid>
        <MudItem xs="12" sm="12">
            <MudPaper Class="pa-4" Elevation="0">
                <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                    <div class="d-flex align-center justify-space-between mt-1">
                        <MudTextField T="decimal" Label="Quantity" ReadOnly="true" Value="@LineItem.TransactionQuantity" Format="N2" />
                        <MudTextField T="decimal" Label="Pieces" ReadOnly="true" Value="@LineItem.Quantity2" Format="N2" />
                        <MudTextField T="decimal" Label="Pending Scans" ReadOnly="true" Value="@GetPendingScans()" Format="N2" />
                        <MudTextField T="decimal" Label="Scans" ReadOnly="true" Value="@LineItem.SerialNumbers.Count" Format="N2" />
                    </div>
                    <div class="d-flex align-center justify-space-between mt-1">
                        <MudTextField T="string" Label="Scan" ReadOnly="DoneAddingSerialNumbers()" Format="N2" 
                            Value="EnteringKey"
                            ValueChanged="OnValueChange"/>
                    </div>
                </MudForm>

                <MudText Typo="Typo.button">Current Barcodes</MudText>
                <hr />

                @foreach (var item in LineItem.SerialNumbers)
                {
                    <MudText Typo="Typo.body1"><span></span> @item.SerialNumber</MudText>

                 
                }


            </MudPaper>

        </MudItem>

    </MudGrid>

}