<MudGrid class="denominator-in-wrap">


    @if (Entries != null)
    {
        <MudSimpleTable width='100%' Hover="true" Dense="true" FixedHeader="true" Style="@(true?"height:500px;":"")">
            <thead>
                <tr>
                    <td> Denominator Name </td>
                    <td> Denominator Value </td>
                    <td> Denominator Qty </td>
                    <td> Row Total</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Entries)
                {
                    <tr>
                        <td>@item.Denomination.CodeName</td>
                        <td>@item.Multiplier.ToString("N2")</td>
                        <td>
                            <MudNumericField @bind-Value=item.Quantity></MudNumericField>
                        </td>
                        <td>@item.GetRowTotal().ToString("N2")</td>

                    </tr>
                }
            </tbody>
        </MudSimpleTable>
        <hr />

        <MudGrid>
            <MudItem xs=12>
                <hr />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.h6">Total</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Align="Align.Right" Typo="Typo.h6">@Entries.Sum(x=>x.GetRowTotal()).ToString("N2")</MudText>
            </MudItem>


        </MudGrid>
    }


</MudGrid>