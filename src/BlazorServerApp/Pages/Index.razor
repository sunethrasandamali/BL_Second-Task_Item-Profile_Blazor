@page "/"
@page "/home"
@using BlueLotus360.Com.UI.Definitions.MB.Shared

<div class="coming-soon-page d-none">

</div>

    <MudGrid Class="mt-lg-2 ">

      

       <MudItem xs="12" md="9" Class="px-2">

@*            <MudItem xs="12" Class="@(showReminderAlert?"px-2 mb-2 top-reminder":"d-none")">
